<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/button_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instruções" />

    <ImageView
        android:layout_width="197dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:src="@drawable/adriel_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="293dp"
        android:layout_height="39dp"
        android:text="  Pisca-Pisca via acelerômetro."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/design_default_color_error"
        android:textSize="20sp"
        tools:ignore="DuplicateIds" />

    <RelativeLayout
        android:layout_width="283dp"
        android:layout_height="77dp"
        tools:context=".MainActivity">

        <SeekBar
            android:id="@+id/seekBar_frequency"
            android:layout_width="264dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:max="1000"
            android:progress="500" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="283dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/seekBar_frequency"
            android:layout_marginEnd="-29dp"
            android:text="Alterar Frequência do pisca-pisca"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#009688"
            android:textSize="16sp"
            tools:ignore="DuplicateIds" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_emergency"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Ativar SOS" />

    <Button
        android:id="@+id/button_voice_control"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Pressione para falar" />

    <Button
        android:id="@+id/button_start_reflex_game"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/other_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Jogo da Lanterna" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:text="Comandos de voz existentes: &quot;Ativar SOS&quot; e &quot;Parar SOS&quot;"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/design_default_color_error"
        android:textSize="20sp"
        tools:ignore="DuplicateIds" />

    <Button
        android:id="@+id/button_toggle"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="Desativar Funções" />


</LinearLayout>
